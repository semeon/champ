<table ng-show="false" class="table table-condensed table-hover table-striped">
	<thead>
		<tr>
			<th>Название</th>
			<th>Дата</th>
			<th>Трасса</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<tr ng-repeat="item in items">
			<td>{{item.name}}</td>
			<td>{{item.date}}</td>
			<td>{{item.place}}</td>
			<td width="100px;">
				<% include __item_controls.ejs %>
			</td>
		</tr>
	</tbody>
</table>


<div class="panel-group" id="accordion">

	<div class="panel panel-default" ng-repeat="item in items">
		<div class="panel-heading">
			<h4 class="panel-title">
				<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#{{item._id}}">
					{{item.name}}
				</a>
			</h4>
		</div>
		<div id="{{item._id}}" class="panel-collapse collapse">
			<div class="panel-body">

			<table ng-shows="item.children.length" class="table table-condensed table-hover table-striped">
				<thead>
					<tr>
						<th>Этап</th>
						<th>Дата</th>
						<th>Трасса</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr ng-repeat="child in item.children">
						<td>{{child.name}}</td>
						<td>{{child.date}}</td>
						<td>{{child.place}}</td>
						<td width="100px;">
							<div class="btn-group btn-group-xs pull-right hover">
							  <button type="button" class="btn btn-primary" ng-click="editButtonClick(child)"><i class="icon-edit"></i></button>
							  <button type="button" class="btn btn-danger" ng-click="deleteButtonClick(child)"><i class="icon-trash"></i></button>
							</div>							
						</td>
					</tr>
				</tbody>
			</table>

			</div>
		</div>
	</div>

</div>
